html {
	height: 100%;
	background-color: #f4f4f4;
}
body {
	height: 100%;
	font: normal 62.5% 'OpenSans_Regular', Verbana, Arial, Helvetica, sans-serif;
	color: #333333;
}

.content {
	margin: 0 auto;
	width: 1100px;
}

.wrapper {
	min-height: 100%;
	min-width: 1100px;
	height: auto!important;
	/* overflow: hidden; */
}
.wrapper:after {
	content: "";
	height: 220px;
	display: block;
}

/* clearfix */

.container:before, .clearfix:before,
.container:after, .clearfix:after {
	content: " "; /* 1 */
	display: table; /* 2 */
}
.container:after, .clearfix:after {
	clear: both;
}