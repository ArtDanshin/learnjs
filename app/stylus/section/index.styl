body 
  position relative
  width 100%
  height 100%

#body-map
  width 100%
  height 100%

#feedback
  position absolute
  top 0
  left 0
  width 380px
  border-radius 10px
  background-color white

.header 
  width 100%
  height 44px
  background-color #ff8663
  border-radius 10px 10px 0 0
  box-sizing border-box
  padding 10px
  &__left
    float left
  &__right
    float right
  
.address
  &__icon
    display inline-block
    width 8px
    height 14px
    background url('img/picker.png') no-repeat 0 0
  &__text
    display inline-block
    vertical-align middle
    font-family FiraSans_Light
    font-size 12px
    color white

.cross
  width 14px
  height 14px
  background url('img/cross.png') no-repeat 0 0
  cursor pointer

.feeds
  width 100%
  padding 0
  height 150px
  overflow auto
  &__item
    list-style none
  &__name 
    display inline-block
    font-family FiraSans_Medium
    font-size 16px
    color #4f4f4f
  &__address
    display inline-block
    font-family FiraSans_Regular
    font-size 16px
    color #4f4f4f
  &__date
    display inline-block
    font-family FiraSans_Regular
    font-size 14px
    color #4f4f4f
  &__text
    font-family FiraSans_Regular
    font-size 15px
    color #4f4f4f

.feed
  width 100%
  padding 0 20px
  box-sizing border-box
  margin-bottom 10px
  &__head
    font-family FiraSans_Medium
    font-size 16px
    color #ff8663
  &__name
  &__place
  &__text
    display block
    width 100%
    margin-bottom 5px
    border-radius 10px
    border 1px grey solid
    font-family FiraSans_Light
    font-size 15px
    color #9f9f9f
  &__bottom
    width 100%
  &__submit
    float right
    padding 5px 10px
    border 0
    border-radius 10px
    background-color #ff8663
    font-family FiraSans_Light
    font-size 12px
    color white
