#body-map
  width 100%
  height 100%

.header 
  background-color #ff8663

.address
  &__icon
    width 8px
    height 14px
    background url('img/picker.png') no-repeat 0 0
  &__text
    font-family FiraSans_Light
    font-size 12px

.cross
  width 14px
  height 14px
  background url('img/cross.png') no-repeat 0 0

.feeds
  &__name 
    font-family FiraSans_Medium
    font-size 16px
    color #4f4f4f
  &__address
    font-family FiraSans_Regular
    font-size 16px
    color #4f4f4f
  &__date
    font-family FiraSans_Regular
    font-size 14px
    color #4f4f4f
  &__text
    font-family FiraSans_Regular
    font-size 15px
    color #4f4f4f

.feed
  &__head
    font-family FiraSans_Medium
    font-size 16px
    color #ff8663
  &__name
  &__place
  &__text
    font-family FiraSans_Light
    font-size 15px
    color #9f9f9f
  &__submit
    font-family FiraSans_Light
    font-size 12px
    color white
