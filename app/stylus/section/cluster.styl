.cluster
  &__title
    font-family FiraSans_Medium
    font-size 12px
  &__list
    width 100%
    padding 0
  &__item
    list-style none
    &-name 
      display inline-block
      margin-right 5px
      font-family FiraSans_Medium
      font-size 12px
      color #4f4f4f
    &-address
      display inline-block
      margin-right 5px
      font-family FiraSans_Regular
      font-size 12px
      color #4f4f4f
    &-date
      display inline-block
      margin-right 5px
      font-family FiraSans_Regular
      font-size 10px
      color #4f4f4f
    &-text
      font-family FiraSans_Regular
      font-size 11px
      color #4f4f4f